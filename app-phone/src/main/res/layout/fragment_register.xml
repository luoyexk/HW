<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/emui_white"
              android:layout_height="match_parent">


        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_email"/>

        <com.huawei.uikit.hwbutton.widget.HwButton
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Emui.HwButton.Emphasize"
                android:text="邮箱验证"
                android:id="@+id/btn_auth"/>

        <!-- 注册校验 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/container_register"
                      android:layout_margin="8dp"
                      android:background="#11000000"
                      android:padding="16dp"
                      android:visibility="gone"
                      tools:visibility="visible"
                      android:orientation="vertical">

            <EditText android:layout_width="match_parent" android:id="@+id/et_password"
                      android:layout_height="wrap_content"
                      android:hint="密码"/>

            <EditText android:layout_width="match_parent" android:id="@+id/et_code" android:layout_height="wrap_content"
                      android:hint="验证码"/>
            <com.huawei.uikit.hwbutton.widget.HwButton android:layout_width="wrap_content"
                                                       android:onClick="onClick"
                                                       style="@style/Widget.Emui.HwButton.Emphasize"
                                                       android:layout_gravity="end"

                                                       android:id="@+id/btn_register"
                                                       android:layout_height="wrap_content" android:text="注册"/>
        </LinearLayout>
</LinearLayout>